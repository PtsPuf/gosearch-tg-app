{
    "version": 2,
    "functions": {
        "backend/main.go": {
            "runtime": "go1.x"
        }
    },
    "builds": [
        {
            "src": "backend/main.go",
            "use": "@vercel/go",
            "config": { "maxLambdaSize": "50mb" }
        }
    ],
    "routes": [
        {
            "src": "/search",
            "dest": "backend/main.go"
        },
        {
            "src": "/",
            "dest": "backend/main.go"
        }
    ]
} 